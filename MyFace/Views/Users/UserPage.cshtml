@model MyFace.Models.View.UserViewModel

@{
    Layout = "_Layout";
}

<article class="userInfo__container">
    <h1 class="title">@Model.FirstName @Model.LastName</h1>
    <img src="@Model.CoverImageUrl" alt="@Model.DisplayName's cover image"/>
    <div class="userInfo__text">
    <h2>@Model.Username</h2>
    <p>@Model.Email</p>
    <p>Number of posts by @Model.FirstName @Model.LastName: @Model.Posts.Count()</p>
    </div>
</article>